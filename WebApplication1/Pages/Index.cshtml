@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<a asp-page="/TestPages/AddPage">ss</a>
<div class="table-responsive">
    <table class="table table-scripped-recipe">
        <thead>
            <tr>
                <th>Name</th>
                <th>Date of birth</th>
                <th>Description</th>
                <th>Departament</th>
                <th>Supervisor</th>
                <th>Is Supervisor ?</th>
                <th></th>
            </tr>
        </thead>
        @foreach (var employee in Model.Employees)
        {
            <tr>
                <td class="align-middle">@employee.Name</td>
                <td class="align-middle">@employee.DateOfBirth</td>
                <td class="align-middle">@employee.Description</td>
                <td class="align-middle">@employee.Department</td>
                <td class="align-middle">@employee.Supervisor</td>
                <td class="align-middle">@employee.IsSupervisor</td>
                <td><a asp-page="TestPages/EditPage" asp-route-id="@employee.EmployeeId" class="btn btn-primary">Edit</a></td>
            </tr>

        }
    </table>
